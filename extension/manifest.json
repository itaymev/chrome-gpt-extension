{
  "manifest_version": 3,
  "name": "Chrome Chat Extension",
  "version": "1.0",
  "description": "A Chrome extension to interact with OpenAI's ChatGPT.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}