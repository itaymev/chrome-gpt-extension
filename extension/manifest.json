{
    "manifest_version": 3,
    "name": "ChatGPT Extension",
    "version": "1.0",
    "description": "A Chrome extension to interact with OpenAI's ChatGPT.",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }